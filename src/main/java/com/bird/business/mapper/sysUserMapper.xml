<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bird.business.dao.SysUserDao">
    <!-- 定义缓存  一般是一级缓存，如果用同一个sqlsession 那么相同查询直接会从缓存中查找 
    <cache size="1024" flushInterval="60000" eviction="LRU" readOnly="false"></cache>
    -->
    
    <!-- 按照用户名和密码查找 -->
    <select id="findSysUserById" resultType="com.bird.business.domain.SysUser" parameterType="String">
        select 
            t.id as id,
              t.username as username,
              t.true_name as trueName,
              t.delete_flag as deleteFlag
        from sys_user t where t.username = #{username}
    </select>
    
</mapper>